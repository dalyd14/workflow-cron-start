{
    "name": "workflow-cron-start",
    "version": "1.0.1",
    "description": "Start workflows on a cron schedule with the Workflow Dev Kit",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./next": {
            "types": "./dist/next.d.ts",
            "import": "./dist/next.js",
            "require": "./dist/next.js",
            "default": "./dist/next.js"
        },
        "./loader": {
            "require": "./loader.cjs",
            "default": "./loader.cjs"
        },
        "./transform": {
            "types": "./dist/transform.d.ts",
            "import": "./dist/transform.js",
            "require": "./dist/transform.js",
            "default": "./dist/transform.js"
        }
    },
    "files": [
        "dist",
        "src",
        "loader.cjs"
    ],
    "scripts": {
        "build": "tsc",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "workflow",
        "workflow-dev-kit",
        "cron",
        "scheduler",
        "cron-expression",
        "recurring",
        "nextjs"
    ],
    "author": "Dave Daly",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dalyd14/workflow-cron-start.git"
    },
    "bugs": {
        "url": "https://github.com/dalyd14/workflow-cron-start/issues"
    },
    "homepage": "https://github.com/dalyd14/workflow-cron-start#readme",
    "peerDependencies": {
        "next": ">=13",
        "workflow": ">=4.0.0"
    },
    "peerDependenciesMeta": {},
    "dependencies": {
        "@swc/core": "^1.3.0",
        "semver": "^7.6.0",
        "tinyglobby": "^0.2.0",
        "workflow-cron-sleep": "^1.0.0"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@types/semver": "^7.5.0",
        "next": "^16.0.0",
        "typescript": "^5.3.0",
        "workflow": "^4.0.1-beta.50"
    }
}
